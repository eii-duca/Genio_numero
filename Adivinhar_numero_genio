    private void btnpActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnpActionPerformed
        // TODO add your handling code here:
        // para gerar um numero aleatório
        double n = 1 + Math.random() * (6 - 1);
        int valor = (int) n;
        
        //pegar o numero que o usuario forneceu
        int num = Integer.parseInt(txtVal.getValue().toString());
        
        //frase que vai aparecer depedendo se o usuário acertou ou errou o valor randomico.
        String f1 = "<html> ACERTOOUU! <html>";
        String f2 = "<html> ERROU! Eu pensei no valor <html>" + valor;
        
        String res = (valor==num)?f1:f2;
        
        //criar uma nova fonte ao texto
        lblFrase.setFont(new Font("Arial Black", Font.PLAIN, 14));
        
        //mostrar a frase no balão do genio
        lblFrase.setText(res);
    }//GEN-LAST:event_btnpActionPerformed

